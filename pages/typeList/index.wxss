/* pages/typeList/index.wxss */
.type-list-commodity {
  padding: 10px;
  overflow-x: hidden;
}
.list-commodity image {
  height: 180px;
  border-radius: 5rpx;
}
.item-tip {
  font-size: 14px;
  display: inline-flex;
  flex-direction: column;
  width: 100%;
  text-align: left;
  padding-left: 5px;
}
.item-tip-text {
  color: #aaa;
  font-size: 12px;
}
.item-purchase {
  display: flex;
  justify-content: space-between;
  padding: 10px;
}
.item-purchase-text {
  color: #f00;
  font-size: 16px;
}
.item-purchase-text text {
  font-size: 10px;
}
.btn-purchase {
  height: 30px;
  line-height: 30px;
  background: #f00;
  color: #fff;
  font-size: 13px;
  width: 48px;
  text-align: center;
  border-radius: 3px;
}
